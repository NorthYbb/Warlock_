  methods: {
    handleClickRow(row, k) {
      console.log('aa', row, k)
    },
    handleInputRow(row) {
      console.log('row', row, this.tableData)
    },

    handleDelIcon(item, val, key) {
      let _index = item.findIndex((i) => {
        if (i.id === val.id) {
          return true
        }
      })
      item.splice(_index, 1)
      if (key && item == false) {
        this.tableData = this.tableData.filter((h) => {
          return h.id !== key
        })
      }
    },
    handleAddToData(arry) {
      // arry 为上层级 传递过来的添加数组
      let _arry = [
        {
          id: '',
          name: '分类名称--newly',
