              name5: '1',
              name6: '1',
              brandId: '1',
              remark: '',
              text: '',
              appendixIds: '',
              hasShoreBase: true,
              isEdit: true,
            },
          ],
        },
      ]
      this.tableData.unshift(..._arry)
    },
  },
}
</script>

