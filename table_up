
<template>
  <div>
    <button @click="handleSave">测试保存必填</button>

    <el-table :data="tableArray" class="box-table" default-expand-all>
      <el-table-column type="expand" header-align="left" align="left">
        <template slot-scope="props">
          <div v-for="(k, _index) in props.row.list" :key="k.id">
            <el-row class="el-row-box">
              <el-col class="col-num">
                <i v-if="k.hasShoreBase">
                  <img src="@/assets/new.png" alt />
                </i>
                <span>{{ _index + 1 }}</span>
              </el-col>
              <el-col
                v-for="(j, _jindex) in staticFun(Object.keys(k))"
                :key="_jindex"
                :style="{
                  width: defaultStyleW[_jindex],
                }"
              >
                <template v-if="k.isEdit && _jindex > 4 && _jindex < 8">
                  <el-select
                    v-model="k[j]"
                    filterable
                    placeholder="请选择"
                    :style="{
                      width: '100%',
                    }"
                    v-if="_jindex === 6"
                  >
                    <el-option
                      v-for="item in brandArray"
                      :key="item.id"
                      :label="item.value"
                      :value="item.id"
                    >
                    </el-option>
                  </el-select>
                  <template v-else>
                    <div v-for="r in requiredArray" :key="r">
                      <el-input
                        v-if="r == j"
                        v-model="k[j]"
                        v-number-input.float
                        placeholder="请输入内容"
                        @blur="handleInputRow(k[j], k)"
                        :style="{
                          width: '100%',
                        }"
                        :class="k.required ? 'input-color' : ''"
                      ></el-input>
                      <el-input
                        v-else
                        v-model="k[j]"
                        placeholder="请输入内容"
                        :style="{
                          width: '100%',
                        }"
                      ></el-input>
                    </div>
                  </template>
                </template>
                <template v-else>
                  <span @click="handleClickRow(props.row, k)">{{ k[j] }}</span>
                </template>
              </el-col>
              <!-- 附件 -->
              <el-col style="text-align: center; width: 70px">
                <template>
                  <BaseFileIcon
                    appendixIds="appendixIds"
                    :value="k"
                    editable
                    :modalTitle="$t('upload.basicInfo')"
                    :number="k.appendixIds"
                  />
                </template>
              </el-col>
              <!-- 删除 -->
              <el-col style="text-align: center; width: 80px">
                <template>
                  <span @click="handleDelIcon(props.row.list, k, props.row.id)">
                    <i class="el-icon-delete" style="font-size: 18px"></i>
                  </span>
                </template>
              </el-col>
            </el-row>
            <div class="static-box">
              <span
                v-for="(v, _vIndex) in Object.values(k['viceObj'])"
                :key="_vIndex"
              >
                <span>{{ viceArray[_vIndex] }}</span
                ><span>{{ v }}</span>
              </span>
            </div>
          </div>
        </template>
      </el-table-column>
      <el-table-column
        v-for="v in lableArray"
        :key="v.label"
        :label="v.label"
        :prop="v.title"
        header-align="left"
        align="left"
        :width="v.width"
        :render-header="renderHeader"
      />
      <el-table-column
        label="附件"
        fixed="right"
        header-align="center"
        align="center"
        width="70px"
      >
      </el-table-column>
      <el-table-column
        label="操作"
        fixed="right"
        header-align="center"
        align="center"
        width="80px"
      >
        <template slot-scope="scope">
          <span @click="handleDelIcon(tableArray, scope.row)">
            <i class="el-icon-delete" style="font-size: 18px"></i>
          </span>
        </template>
      </el-table-column>
    </el-table>
  </div>
</template>
<script>
import { EventBus } from 'base-core-lib'
export default {
  props: {
    // 品牌集合
    brandArray: {
      type: Array,
      default() {
        return [
          {
            id: '1',
            value: '黄金糕',
          },
          {
            id: '2',
            value: '双皮奶',
          },
          {
            id: '3',
            value: '蚵仔煎',
          },
        ]
      },
    },
    // 表格宽度集合
    defaultStyleW: {
      type: Array,
      default() {
        return [
          '200px',
          '200px',
          '400px',
          '50px',
          '100px',
          '100px',
          '200px',
          '400px',
        ]
      },
    },
    // 表格数据
    tableData: {
      type: Array,
      default() {
        return [
          {
            id: '1',
            title: '喜马拉雅山脉--A',
            list: [
              {
                id: '1',
                name1: '喜马拉雅山脉',
                name2: '900*100',
                name3: '喜马拉雅山脉,藏语意为雪的故乡!',
                name4: '座',
                name5: '1',
                applications: '1',
                brandId: '1',
                remark:
                  '是东亚大陆与南亚次大陆的天然界山,也是中国与印度、尼泊尔、不丹、巴基斯坦等国的天山。',
                text: '',
                appendixIds: '918149049292996608',
                hasShoreBase: true,
                isEdit: true,
                viceObj: {
                  boundQuantity: '10/0',
                  highestSecurityQuantity: '1/100',
                  signedDate: '2021-09-01/2021-10-01/2021-11-01',
                  signedQuantity: '20/50/54',
                  notSigned: '99',
                },
              },
              {
                id: '2',
                name1: '昆仑虚',
                name2: '800*200',
                name3: '中国第一神山、万祖之山、昆仑丘或玉山!',
                name4: '座',
                name5: '1',
                applications: '2',
                brandId: '2',
                remark: '是亚洲中部大山系,也是中国西部山系的主干。',
                text: '',
                appendixIds: '',
                hasShoreBase: false,
                isEdit: true,
                viceObj: {
                  boundQuantity: '10/0',
                  highestSecurityQuantity: '1/100',
                  signedDate: '2021-09-01/2021-10-01/2021-11-01',
                  signedQuantity: '20/50/54',
                  notSigned: '99',
                },
              },
            ],
          },
          {
            id: '2',
            title: '阿尔卑斯山--A',
            list: [
              {
                id: '1',
                name1: '阿尔卑斯山',
                name2: '900*100',
                name3: '阿尔卑斯山!',
                name4: '座',
                name5: '1',
                applications: '3',
                brandId: '1',
                remark:
                  '是东亚大陆与南亚次大陆的天然界山,也是中国与印度、尼泊尔、不丹、巴基斯坦等国的天山。',
                text: '',
                appendixIds: '918149049292996608',
                hasShoreBase: true,
                isEdit: true,
                viceObj: {
                  boundQuantity: '10/2',
                  highestSecurityQuantity: '8/100',
                  signedDate: '2021-09-01/2021-10-01/2021-11-01',
                  signedQuantity: '20/50/54',
                  notSigned: '120',
                },
              },
            ],
          },
        ]
      },
    },
    // 表头数据
    lableData: {
      type: Array,
      default() {
        return [
          {
            label: '物料名称',
            title: 'title',
            width: '200px',
          },
          {
            label: '规格',
            width: '200px',
          },
          {
            label: '说明',
            width: '400px',
          },
          {
            label: '单位',
            width: '50px',
          },
          {
            label: '岸基库存',
            width: '100px',
          },
          {
            label: '申请数量',
            title: 'required',
            width: '100px',
          },
          {
            label: '申请品牌',
            width: '200px',
          },
          {
            label: '备注',
            width: '400px',
          },
        ]
      },
    },
    viceData: {
      type: Array,
      default() {
        return [
          '近一年入/出库数量:',
          '安全/最高库存:',
          '近3次签收时间::',
          '近3次签收数量:',
          '未签收数量:',
        ]
      },
    },
    // 必填项
    requiredData: {
      type: Array,
      default() {
        return ['applications']
      },
    },
    // 固定静态展示项
    staticData: {
      type: Array,
      default() {
        return [
          'name1',
          'name2',
          'name3',
          'name4',
          'name5',
          'applications',
          'brandId',
          'remark',
        ]
      },
    },
  },
  computed: {
    staticFun() {
      return function (a) {
        return this.staticArray.filter((item) => a.includes(item))
      }
    },
  },

  watch: {
    tableData: {
      handler(newVal, oldVal) {
        this.tableArray = newVal
      },
      immediate: true,
      deep: true,
    },
    lableData: {
      handler(newVal, oldVal) {
        this.lableArray = newVal
      },
      immediate: true,
      deep: true,
    },
    viceData: {
      handler(newVal, oldVal) {
        this.viceArray = newVal
      },
      immediate: true,
      deep: true,
    },
    requiredData: {
      handler(newVal, oldVal) {
        this.requiredArray = newVal
      },
      immediate: true,
      deep: true,
    },
    staticData: {
      handler(newVal, oldVal) {
        this.staticArray = newVal
      },
      immediate: true,
      deep: true,
    },
  },
  data() {
    return {
      tableArray: [],
      lableArray: [],
      viceArray: [],
      requiredArray: [],
      staticArray: [],
    }
  },
  created() {},
  methods: {
    renderHeader(h, { column }) {
      if (column.property === 'required') {
        return h('span', [
          h('i', {
            class: 'el-icon-star-on',
            style: 'color: #f91717',
          }),
          h('span', column.label),
        ])
      } else {
        return h('span', [h('span', column.label)])
      }
    },
    handleClickRow(row, k) {
      console.log('aa', row, k)
    },
    handleInputRow(row, k) {
      if (!row) {
        this.$set(k, 'required', true)
        EventBus.$emit('warning', this.$t('请正确填入申请数量!'))
        return
      } else {
        this.$set(k, 'required', false)
      }
    },

    handleDelIcon(item, val, key) {
      let _parentText = '此操作将永久删除设备分类文件, 是否继续?',
        _childText = '此操作将永久删除子文件, 是否继续?'
      this.$confirm(key ? _childText : _parentText, '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'warning',
      })
        .then(() => {
          let _index = item.findIndex((i) => {
            if (i.id === val.id) {
              return true
            }
          })
          item.splice(_index, 1)
          if (key && item == false) {
            this.tableArray = this.tableArray.filter((h) => {
              return h.id !== key
            })
          }
          EventBus.$emit('success', this.$t('删除成功!'))
        })
        .catch(() => {})
    },
    handleAddToData(arry) {
      // arry 为上层级 传递过来的添加数组
      let _arry = [
        {
          id: '',
          title: '分类名称--newly',
          list: [
            {
              id: '',
              name1: '阿尔比斯山脉',
              name2: '777*100',
              name3: '',
              name4: '座',
              name5: '1',
              applications: '3',
              brandId: '1',
              remark: '',
              text: '',
              appendixIds: '',
              hasShoreBase: true,
              isEdit: true,
              viceObj: {
                boundQuantity: '10/0',
                highestSecurityQuantity: '1/100',
                signedDate: '2021-09-01/2021-10-01/2021-11-01',
                signedQuantity: '20/50/54',
                notSigned: '99',
              },
            },
          ],
        },
      ]
      this.tableArray.unshift(..._arry)
    },
    handleSave() {
      let _verifyData = []
      this.tableArray.map((v) => {
        _verifyData.push(...v.list)
      })

      if (
        _verifyData.some((s) => {
          return s.required
        })
      ) {
        EventBus.$emit('error', this.$t('请正确填入申请数量!'))
      }
      console.log('>>>', this.tableArray)
    },
  },
}
</script>

<style scoped lang="scss">
.box-table {
  width: 100%;
  border: 1px solid #ccc;
  /deep/.el-table__header-wrapper {
    tr > th {
      border-right: 1px solid #ccc;
    }
  }
}
.el-row-box {
  display: flex;
  text-align: left;
  height: 40px;
  align-items: center;
  border-bottom: 1px solid #ccc;
  .col-num {
    position: relative;
    border-left: none;
    width: 47px;
    text-align: center;
    padding: 0;
    > i {
      position: absolute;
      left: 0;
      width: 0;
      height: 0;
    }
  }
  > div {
    padding: 0 5px;
    height: 40px;
    line-height: 40px;
    border-left: 1px solid #ccc;
    width: 150px;
  }
  .input-color {
    /deep/.el-input__inner {
      border: 1px solid #ff0000;
    }
  }
}
.static-box {
  display: flex;
  justify-content: space-between;
  padding-left: 1rem;
  height: 40px;
  line-height: 40px;
  background: aliceblue;
  span:last-child {
    flex: 0.5;
  }
}
</style>
